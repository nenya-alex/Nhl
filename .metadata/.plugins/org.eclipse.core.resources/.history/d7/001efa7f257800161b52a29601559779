package ua.nenya.main;

import java.time.LocalDate;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import ua.nenya.dao.ReadTeamGamesDAO;
import ua.nenya.dao.impl.ReadTeamGamesDAOImpl;
import ua.nenya.domain.Game;

public class Runner {
	
	private final static String TABLE_NAME = "nhl2015";
		
	public void runApp(long id){
		ReadTeamGamesDAO readGame = new ReadTeamGamesDAOImpl();
		Game game = readGame.readGame(id, TABLE_NAME);
		
		System.out.println(game.getId());
		System.out.println(game.getHomeTeam());
		System.out.println(game.getGuestTeam());
	}

}
